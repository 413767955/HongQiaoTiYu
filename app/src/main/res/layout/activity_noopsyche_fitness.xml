<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:background="@color/color_bg">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.tianjin.beichentiyu.widget.CustomToolbar
            android:id="@+id/toolbar"
            style="@style/toolbar_style"
            app:title="智能健身" />
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_below="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.jude.rollviewpager.RollPagerView
                android:id="@+id/rpv"
                android:layout_width="match_parent"
                android:layout_height="152dp"
                android:layout_marginLeft="@dimen/padding_left"
                android:layout_marginRight="@dimen/padding_left"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:elevation="6dp"
                android:fitsSystemWindows="true"
                app:layout_collapseMode="parallax"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/lin_znbd"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <RelativeLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp">
                        <ImageView
                            android:layout_width="23dp"
                            android:layout_height="36dp"
                            android:layout_centerInParent="true"
                            android:background="@mipmap/icon_znbd"/>
                    </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textSize="11sp"
                        android:textColor="#161616"
                        android:text="智能步道"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lin_znqc"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <RelativeLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp">
                        <ImageView
                            android:layout_width="34dp"
                            android:layout_height="24dp"
                            android:layout_centerInParent="true"
                            android:background="@mipmap/icon_znqc"/>
                    </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textSize="11sp"
                        android:textColor="#161616"
                        android:text="智能球场"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lin_znlj"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <RelativeLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp">
                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="27dp"
                            android:layout_centerInParent="true"
                            android:background="@mipmap/icon_znlj"/>
                    </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textSize="11sp"
                        android:textColor="#161616"
                        android:text="智能路径"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lin_znjsf"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <RelativeLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp">
                        <ImageView
                            android:layout_width="29dp"
                            android:layout_height="31dp"
                            android:layout_centerInParent="true"
                            android:background="@mipmap/icon_znjsf"/>
                    </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textSize="11sp"
                        android:textColor="#161616"
                        android:text="智能健身房"/>
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/rel_hot"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/iv_hot_icon"
                    android:layout_centerVertical="true"
                    android:layout_width="13dp"
                    android:layout_height="16dp"
                    android:background="@mipmap/icon_home_tag"/>
                <TextView
                    android:id="@+id/tv_hot_name"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/iv_hot_icon"
                    android:textSize="18sp"
                    android:textColor="#161616"
                    android:text="热门推荐 Recommend"/>

                <TextView
                    android:id="@+id/tv_hot_all"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:textSize="13sp"
                    android:layout_toLeftOf="@+id/tv_hot_next"
                    android:textColor="#777777"
                    android:layout_marginRight="3dp"
                    android:text="查看全部"/>
                <ImageView
                    android:id="@+id/tv_hot_next"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="5dp"
                    android:layout_height="10dp"
                    android:background="@mipmap/right_gray_img"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/color_f2f2f2"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.recyclerview.widget.RecyclerView
        style="@style/recyclerview_style"
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/tv_nodata_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/color_595959"
                    android:paddingTop="30dp"
                    android:paddingBottom="30dp"
                    android:gravity="center"
                    android:text="无热门推荐"/>
            </RelativeLayout>

            <!--<include layout="@layout/layout_refresh_layout"/>-->
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>
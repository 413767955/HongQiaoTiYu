<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:rc="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/padding_left"
    android:layout_marginRight="@dimen/padding_right"
    android:layout_marginTop="12dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#161616"
        android:text="附近的设施"/>
    <TextView
        android:id="@+id/tv2"
        android:layout_below="@+id/tv1"
        android:layout_marginTop="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#161616"
        android:textSize="10sp"
        android:text="查看您附近的场地与设施"/>
    <LinearLayout
        android:id="@+id/lin_look_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="查看全部>"
            android:textColor="#398DEE"
            android:textSize="10sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/tv2"
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/rel_card1"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_marginRight="6dp"
            android:layout_height="160dp">
            <com.android.liuzhuang.rcimageview.RoundCornerImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/icon_field_err"
                rc:rciv_radius="5dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentBottom="true"
                android:src="@drawable/bg_nearby"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"
                android:layout_marginBottom="14dp"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_title1"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:gravity="bottom"
                    android:includeFontPadding="false"
                    android:textColor="@android:color/white"
                    android:textSize="13sp"/>
                <TextView
                    android:id="@+id/tv_dis1"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:gravity="bottom"
                    android:includeFontPadding="false"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"/>
                <TextView
                    android:id="@+id/tv_open_time1"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:gravity="bottom"
                    android:includeFontPadding="false"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"/>
                <TextView
                    android:id="@+id/tv_address1"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:gravity="bottom"
                    android:includeFontPadding="false"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rel_card2"
            android:layout_weight="1"
            android:layout_marginLeft="6dp"
            android:layout_width="match_parent"
            android:layout_height="160dp">
            <com.android.liuzhuang.rcimageview.RoundCornerImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/icon_field_err"
                rc:rciv_radius="5dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentBottom="true"
                android:src="@drawable/bg_nearby"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"
                android:layout_marginBottom="14dp"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_title2"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:gravity="bottom"
                    android:includeFontPadding="false"
                    android:textColor="@android:color/white"
                    android:textSize="13sp"/>
                <TextView
                    android:id="@+id/tv_dis2"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:gravity="bottom"
                    android:includeFontPadding="false"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"/>
                <TextView
                    android:id="@+id/tv_open_time2"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:gravity="bottom"
                    android:includeFontPadding="false"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"/>
                <TextView
                    android:id="@+id/tv_address2"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:gravity="bottom"
                    android:includeFontPadding="false"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/color_bg">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.tianjin.beichentiyu.widget.CustomToolbar
            android:id="@+id/toolbar"
            style="@style/toolbar_style"
            app:title="注册"/>
    </com.google.android.material.appbar.AppBarLayout>
    <RelativeLayout
        android:layout_width="265dp"
        android:layout_height="55dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:id="@+id/iv_phone"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@mipmap/icon_account_name"
            android:layout_centerVertical="true"/>
        <EditText
            android:id="@+id/et_phone"
            android:layout_toRightOf="@+id/iv_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:maxLines="1"
            android:maxLength="11"
            android:inputType="phone"
            android:layout_marginLeft="6dp"
            android:textColorHint="#CCCCCC"
            android:textColor="#161616"
            android:textSize="16sp"
            android:hint="请输入手机号"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEEEEE"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="265dp"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:id="@+id/iv_sms"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@mipmap/icon_account_sms"
            android:layout_centerVertical="true"/>
        <EditText
            android:id="@+id/et_sms"
            android:layout_toRightOf="@+id/iv_sms"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_get_code"
            android:background="@android:color/transparent"
            android:maxLines="1"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="@dimen/padding_right"
            android:textColorHint="#CCCCCC"
            android:textColor="#161616"
            android:textSize="16sp"
            android:hint="请输入验证码"
            />
        <TextView
            android:id="@+id/tv_get_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/padding_right"
            android:textColor="#161616"
            android:textSize="14sp"
            android:text="获取验证码"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEEEEE"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="265dp"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:id="@+id/iv_password"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@mipmap/icon_account_password"
            android:layout_centerVertical="true"/>
        <EditText
            android:id="@+id/et_password"
            android:layout_toRightOf="@+id/iv_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:maxLines="1"
            android:layout_marginLeft="6dp"
            android:inputType="textPassword"
            android:textColorHint="#CCCCCC"
            android:textColor="#161616"
            android:textSize="16sp"
            android:hint="输入密码"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEEEEE"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="265dp"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:id="@+id/iv_password2"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@mipmap/icon_account_password"
            android:layout_centerVertical="true"/>
        <EditText
            android:id="@+id/et_password2"
            android:layout_toRightOf="@+id/iv_password2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:maxLines="1"
            android:layout_marginLeft="6dp"
            android:inputType="textPassword"
            android:textColorHint="#CCCCCC"
            android:textColor="#161616"
            android:textSize="16sp"
            android:hint="重复密码"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEEEEE"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_register"
        android:layout_width="265dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:elevation="3dp"
        android:gravity="center"
        android:text="注册"
        android:textSize="16sp"
        android:layout_marginTop="55dp"
        android:textColor="@android:color/white"
        android:background="@drawable/round_btn"/>
    <LinearLayout
        android:layout_below="@+id/rel_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="@dimen/padding_left"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="19dp"
            android:layout_height="19dp"
            style="@style/CircularCheckBoxTheme"
            android:gravity="center"
            android:checked="true"/>

        <TextView
            android:id="@+id/tv_agreement"
            android:layout_marginLeft="5dp"
            android:textColor="#888787"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="我已阅读并同意"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#B2AFBB"
            android:text="已有账号？"/>
        <TextView
            android:id="@+id/tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#161616"
            android:text="立即登录"/>
    </LinearLayout>
</LinearLayout>
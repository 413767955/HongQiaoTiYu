<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:background="@color/color_bg">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.tianjin.beichentiyu.widget.LoginCustomToolbar
            android:id="@+id/toolbar"
            style="@style/toolbar_style"/>
    </com.google.android.material.appbar.AppBarLayout>
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="15dp"
        android:layout_above="@+id/tv_app_name"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/hongqiao_logo"/>
    <TextView
        android:id="@+id/tv_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:textColor="#161616"
        android:layout_above="@+id/rel_name"
        android:layout_marginBottom="10dp"
        android:text="欢迎登录红桥体育"/>
    <RelativeLayout
        android:id="@+id/rel_name"
        android:layout_width="265dp"
        android:layout_height="55dp"
        android:layout_above="@+id/rel_password"
        android:layout_centerHorizontal="true">
        <ImageView
            android:id="@+id/iv_name"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/icon_account_name"/>
        <EditText
            android:id="@+id/et_name"
            android:layout_toRightOf="@+id/iv_name"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:maxLines="1"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:maxLength="11"
            android:textColorHint="#CCCCCC"
            android:textColor="#595959"
            android:textSize="16sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#EEEEEE"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rel_password"
        android:layout_width="265dp"
        android:layout_height="55dp"
        android:layout_centerInParent="true">
        <ImageView
            android:id="@+id/iv_password"
            android:layout_width="14dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/icon_account_password"/>
        <EditText
            android:id="@+id/et_password"
            android:layout_toRightOf="@+id/iv_password"
            android:layout_toLeftOf="@+id/tv_forget_password"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="3dp"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:maxLength="16"
            android:layout_centerVertical="true"
            android:inputType="textPassword"
            android:hint="输入密码"
            android:textColorHint="#CCCCCC"
            android:textColor="#595959"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/tv_forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="忘记密码？"
            android:textSize="13sp"
            android:textColor="#595959"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#EEEEEE"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rel_login"
        android:layout_width="265dp"
        android:layout_height="50dp"
        android:layout_below="@+id/rel_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:background="@drawable/round_login">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:text="登陆"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rel_register"
        android:layout_width="265dp"
        android:layout_height="50dp"
        android:layout_below="@+id/rel_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:background="@drawable/round_register">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#161616"
            android:textSize="16sp"
            android:text="注册"/>
    </RelativeLayout>
</RelativeLayout>
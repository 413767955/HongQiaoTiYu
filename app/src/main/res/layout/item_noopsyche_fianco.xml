<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:padding="16dp">
        <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@mipmap/release_img1"/>
        <RelativeLayout
            android:id="@+id/rel_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_people_num_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="#161616"
                android:textSize="10sp"
                android:text="人去过"/>
            <TextView
                android:id="@+id/tv_people_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/tv_people_num_end"
                android:layout_alignBaseline="@+id/tv_people_num_end"
                android:textColor="#FFB974"
                android:textSize="13sp"
                android:text="10108"/>
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_phone"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginTop="9dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_people_num"
                android:layout_marginRight="8dp"
                />
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_share"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginTop="9dp"
                android:layout_toLeftOf="@+id/fab_phone"
                android:layout_below="@+id/tv_people_num"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_name"
            android:layout_toLeftOf="@+id/iv_cover"
            android:layout_toRightOf="@+id/rel_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="XXX智能体侧中心"
            android:textColor="#161616"
            android:textSize="13sp"/>
        <TextView
            android:id="@+id/tv_site"
            android:layout_toLeftOf="@+id/iv_cover"
            android:layout_toRightOf="@+id/rel_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="天津市 南开区"
            android:textColor="#777777"
            android:textSize="11sp"/>
        <TextView
            android:id="@+id/tv_time"
            android:layout_toLeftOf="@+id/iv_cover"
            android:layout_toRightOf="@+id/rel_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="开放时间:周一至周日 全天"
            android:textColor="#777777"
            android:textSize="11sp"/>
    </RelativeLayout>
</RelativeLayout>
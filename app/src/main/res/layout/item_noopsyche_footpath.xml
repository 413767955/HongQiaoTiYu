<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:rc="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">
        <com.android.liuzhuang.rcimageview.RoundCornerImageView
            android:id="@+id/iv_cover"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="8dp"
            android:layout_width="92dp"
            android:layout_height="64dp"
            tools:background="@mipmap/release_img1"
            android:scaleType="fitXY"
            rc:rciv_radius="5dp"/>
        <LinearLayout
            android:id="@+id/lin_tag"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:background="@drawable/round_tag1"
            android:layout_toLeftOf="@+id/iv_cover"
            android:layout_alignBottom="@+id/iv_cover"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@mipmap/icon_navigation_blue"/>
            <TextView
                android:id="@+id/tv_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:text="去这里"
                android:textColor="#398DEE"
                android:textSize="12sp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:lines="1"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_toLeftOf="@+id/iv_cover"/>
        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/tv_name"
            android:layout_toLeftOf="@+id/tv_price"
            android:textColor="#A0A0A0"
            android:singleLine="true"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/lin_tag"
            android:layout_below="@+id/tv_name"
            android:textColor="#A0A0A0"
            android:textSize="11sp"/>
        <TextView
            android:id="@+id/tv_journey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/tv_address"
            android:textColor="#A0A0A0"
            android:textSize="12sp"/>


    </RelativeLayout>
    <View
        android:layout_below="@+id/rel"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#F5F5F5"/>
</RelativeLayout>